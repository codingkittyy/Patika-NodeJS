<%- include('partials/_head.ejs') %> <%- include('partials/_navigation.ejs') %>
<section class="">
  <div class="container">
    <div class="row align-items-center text-center justify-content-center">
      <div class="col-lg-8">
        <div class="modal-body">
          <!-- Project details-->
          <h2 class="text-uppercase"><%= photo.title %></h2>
          <img
            class="img-fluid d-block mx-auto w-50"
            src="<%= photo.image %>"
          />
          <p><%= photo.desc %></p>
          <ul class="list-inline">
            <li>
              <strong>Client:</strong>
              <%= photo.client %>
            </li>
            <li>
              <strong>Category:</strong>
              <%= photo.category %>
            </li>
          </ul>
          <a
            href="/edit/<%= photo._id %>"
            class="btn btn-warning btn-xl text-uppercase"
            type="button"
          >
            Edit
          </a>
          <a
            href="/portfolio/photos/<%= photo._id %>?_method=DELETE"
            class="btn btn-danger btn-xl text-uppercase"
            type="button"
            onclick="return confirm('Are you sure?')"
          >
            Remove
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/_footer.ejs') %> <%- include('partials/_end.ejs') %>
