<%- include('partials/_header') -%>

  <body>
    <!-- Navigation -->
    <%- include('partials/_navbar') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <div class="d-flex justify-content-between"> 
              <a href="/posts/edit/<%= post._id %>" class="text-white ">
                <h5 class="font-weight-normal">Edit Post</h5>
              </a>
              <a href="/posts/<%= post._id %>?_method=DELETE" onclick="return confirm('Are you sure')" class="text-white ">
                <h5 class="font-weight-normal">Remove Post</h5>
              </a>
            </div>
              <h1><%= post.title %></h1>
              <h2 class="subheading">
                <%= post.subtitle %>              
              </h2>
              <span class="meta"
                >Posted by
                <a><%= post.author %></a>
                on <%= post.postDate %></span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <%= post.message %>
          </div>
        </div>
      </div>
    </article>

    <hr />

    <!-- Footer -->
    <%- include('partials/_footer') -%>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
  </body>
</html>
